<UserControl x:Class="Presentation.Components.Patients.RegisterPatientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Components.Patients"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:buttons="clr-namespace:Presentation.Components.Atomic.Buttons"
             xmlns:atomic="clr-namespace:Presentation.Components.Atomic"
             mc:Ignorable="d" 
             d:DesignHeight="546" d:DesignWidth="873" >

    <materialDesign:Card>
        <materialDesign:TransitioningContent x:Name="TransitioningContentSlide"
                                                 OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:0.2}">
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="14*"/>
                </Grid.RowDefinitions>

                <buttons:GoBackButtonUserControl ToolTip="Volver a la seccion de pacientes"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Click="GoBackButtonUserControl_Click"/>

                <TextBlock Style="{StaticResource TitleText}"
                           Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="Registro de paciente"/>

                <Separator Grid.Row="1"
                           VerticalAlignment="Top"
                           Margin="20,0,20,0"
                           Height="3"/>

                <Grid x:Name="ProgressBarGrid"
                      Grid.Row="1"
                      Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <atomic:ProgressBarItemUserControl x:Name="BasicDataItem"
                                                       ProgressBarItemText="Informacion bÃ¡sica" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <atomic:ProgressBarItemUserControl x:Name="ContactDataItem"
                                                       ProgressBarItemText="Informacion de contacto"
                                                       Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <atomic:ProgressBarItemUserControl x:Name="MedicalDataItem"
                                                       ProgressBarItemText="Informacion medica"
                                                       Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <atomic:ProgressBarItemUserControl x:Name="FinishFormItem"
                                                       ProgressBarItemText="Finalizar"
                                                       Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <Separator Grid.Row="1"
                           VerticalAlignment="Bottom"
                           Margin="20,0,20,0"
                           Height="3"/>

                <Frame x:Name="FormsContentArea"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="20"
                    NavigationUIVisibility="Hidden"/>
            </Grid>
        </materialDesign:TransitioningContent>
    </materialDesign:Card>
</UserControl>
